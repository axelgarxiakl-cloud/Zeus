loadstring([[
-- -- GUI Script para activar/desactivar funciones

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local root = character:WaitForChild("HumanoidRootPart")
local mouse = player:GetMouse()
local gui = Instance.new("ScreenGui", player.PlayerGui)

-- CONFIGURACIONES
local autoLootRadius = 5
local superJumpHeight = 50
local superSpeedMultiplier = 1.5
local aimBotEnabled = false
local autoLootEnabled = false
local superJumpEnabled = false
local superSpeedEnabled = false

-- INVENTARIO BACKUP
local inventoryBackup = {}
for _, item in pairs(player.Backpack:GetChildren()) do
    table.insert(inventoryBackup, item:Clone())
end

-- FUNCIONES PRINCIPALES
local function autoLoot()
    if not autoLootEnabled then return end
    for _, item in pairs(workspace.Items:GetChildren()) do
        if (item.Position - root.Position).magnitude <= autoLootRadius then
            table.insert(player.Backpack:GetChildren(), item)
            item:Destroy()
        end
    end
end

local function mostrarArmasEnemigos()
    for _, enemy in pairs(game.Players:GetPlayers()) do
        if enemy ~= player then
            local armas = {}
            for _, tool in pairs(enemy.Backpack:GetChildren()) do
                table.insert(armas, tool.Name)
            end
            print(enemy.Name .. " tiene: " .. table.concat(armas, ", "))
        end
    end
end

local function aimbot()
    if not aimBotEnabled then return end
    local closestEnemy = nil
    local shortestDistance = 50
    for _, enemy in pairs(game.Players:GetPlayers()) do
        if enemy ~= player and enemy.Character and enemy.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (enemy.Character.HumanoidRootPart.Position - root.Position).magnitude
            if distance < shortestDistance then
                closestEnemy = enemy
                shortestDistance = distance
            end
        end
    end
    if closestEnemy then
        mouse.Target = closestEnemy.Character.HumanoidRootPart
    end
end

local function activarSuperSalto()
    if superJumpEnabled then
        humanoid.JumpPower = superJumpHeight
    else
        humanoid.JumpPower = 50 -- valor normal
    end
end

local function activarSuperVelocidad()
    if superSpeedEnabled then
        humanoid.WalkSpeed = 16 * superSpeedMultiplier
    else
        humanoid.WalkSpeed = 16 -- valor normal
    end
end

local function regenerarInventario()
    for _, item in pairs(inventoryBackup) do
        local clone = item:Clone()
        clone.Parent = player.Backpack
    end
end

-- CREAR BOTONES
local function crearBoton(nombre, posicion, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0,150,0,50)
    button.Position = posicion
    button.Text = nombre
    button.Parent = gui
    button.MouseButton1Click:Connect(callback)
end

crearBoton("Toggle AutoLoot", UDim2.new(0,10,0,10), function() autoLootEnabled = not autoLootEnabled end)
crearBoton("Toggle Aimbot", UDim2.new(0,10,0,70), function() aimBotEnabled = not aimBotEnabled end)
crearBoton("Toggle SuperJump", UDim2.new(0,10,0,130), function() superJumpEnabled = not superJumpEnabled; activarSuperSalto() end)
crearBoton("Toggle SuperSpeed", UDim2.new(0,10,0,190), function() superSpeedEnabled = not superSpeedEnabled; activarSuperVelocidad() end)
crearBoton("Regenerar Inventario", UDim2.new(0,10,0,250), function() regenerarInventario() end)

-- BUCLE PRINCIPAL
while true do
    autoLoot()
    mostrarArmasEnemigos()
    aimbot()
    wait(0.5)
end
]])()
